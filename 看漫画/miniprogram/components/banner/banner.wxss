/* components/banner/banner.wxss */
.ContentBase {
  box-sizing: border-box;
  position: relative;
  width: 720rpx;    
  cursor: default;
  margin: 0 auto;
  margin-top: 10rpx;
  border-radius: 10rpx;
}
.slcf_banner {
  position: relative;    
  float: left;
  /*top: -.6rem;*/
  width: 100%;
  height: auto;
  overflow: hidden;
}
.slider_wrapper {
  position: relative;
  overflow: hidden;	
  width: 100%;  
  background-size: 100% 100%;
}
.slider_wrapper .tab_swiper{
  width: 100%;
  height: 362rpx;
}
.slider_wrapper  .tab_a{
  box-sizing: border-box;
  width: 100%;
  height: 100%;  
  overflow: hidden;
  border-radius: 10rpx;
  display: flex;
  flex-wrap: wrap;
  background: #fff;
  margin: 0 auto;
}
.slider_wrapper .tab_img{
  position: relative;
  box-sizing: border-box;
  width: 33.33333333%;
  height: auto;
  /*box-shadow:  0 .1rem .1rem rgba(0, 0, 0, .8);    */
  /*margin: 0 auto; */   
  display: block;
}