/* components/search/search.wxss */
/*搜索*/
.searchMG{
  position: absolute;
  top: 0;
  left: 50%;
  width: 100%;
  max-width: 750rpx;
  transform: translateX(-50%);
  height: 100%;
  z-index: 999;
}

.search-box{
  position: fixed;
  top: 0;
  z-index: 1000;
  width: 75%;
  padding: 18rpx 12.5%;
  text-indent: 20rpx;
  background: rgba(238, 151, 204, .3);
}

.search-font{
  font-size: 32rpx;
}

.search-box-text{
  box-sizing: border-box;
  width: 100%;
  display: block;
  height: 72rpx;
  line-height: 72rpx;
  padding: 0 20rpx;
  background: #fff;
  border-radius: 28rpx;
  border: 5rpx solid skyblue;
  -webkit-animation: searchShow .8s;
  -o-animation: searchShow .8s;
  animation: searchShow .8s;
}

.search-content{
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  padding-top: 100rpx;
  background: rgba(238, 151, 204, .3);
  -webkit-animation: backgroundShow 2s;
  -o-animation: backgroundShow 2s;
  animation: backgroundShow 2s;
}

.search-init-ul{
  padding: 0 20rpx;
}

.search-init-li{
  position: relative;
  margin-bottom: 10rpx;
  z-index: 999;
}

.search-init-li .item-link{
  display: flex;
  padding: 10rpx;
  height: 250rpx;
  border-radius: 10rpx;
  background: rgba(211, 211, 211, .8);
  -webkit-animation: backgroundShow 2s;
  -o-animation: backgroundShow 2s;
  animation: backgroundShow 2s;
}

.search-init-li .item-cover-div{
  width: 28%;
  height: 100%;
}

.search-init-li .item-cover-div img{
  width: auto;
  height: 100%;
  overflow: hidden;
}

.search-init-li .item-info{
  display: flex;
  width: 80%;
  padding-left: 20rpx;
  flex-direction: column;
  font-size: 32rpx;
}

.search-init-li .item-info strong, .item-info small{
  margin-bottom: 2rpx;
}
.item-cover{
  width: 100%;
}

@keyframes searchShow
{
  0% { width: 0%; background: skyblue;}
  5% { width: 3.75%; background: skyblue;}
  10% { width: 7.5%; background: skyblue;}
  15% { width: 11.25%; background: skyblue;}
  20% { width: 15%; background: skyblue;}
  25% { width: 18.75%; background: skyblue;}
  30% { width: 22.5%; background: skyblue;}
  35% { width: 26.25%; background: skyblue;}
  40% { width: 30%; background: skyblue;}
  45% { width: 33.75%; background: skyblue;}
  50% { width: 37.5%; background: skyblue;}
  55% { width: 41.25%; background: skyblue;}
  60% { width: 45%; background: skyblue;}
  65% { width: 48.75%; background: skyblue;}
  70% { width: 52.5%; background: skyblue;}
  75% { width: 56.25%; background: skyblue;}
  80% { width: 60%; background: skyblue;}
  85% { width: 63.75%; }
  90% { width: 67.5%; background: skyblue;}
  95% { width: 71.25%; background: skyblue;}
  100% { width: 75%; background: #fff;}
}

@keyframes backgroundShow
{
  0% {background: #ffffff;}
  100% {background: rgba(238, 151, 204, .4);}
}