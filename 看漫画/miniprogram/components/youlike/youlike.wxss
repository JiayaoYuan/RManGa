/* components/youlike.wxss */
.main-content{
  position: relative;
  /*top: -.6rem;*/
  /*margin-top: .1rem;*/
  border-top: 20rpx solid rgba(221, 221, 221, .7);
  float: left;
  width: 100%;
  background: #fff;
}
.main-content > .tab_h1{
  margin: 10rpx 0 10rpx 1rpx;
  font-size: 30rpx;
  font-weight: bolder;    
}
.main-content > .tab_h1 .tab_span{
  font-size: 24rpx;
  font-weight: 300;
  color: #b6b6b6;
  margin-left: 20rpx;
}
.shop_package{
  display: flex;
  flex-wrap: wrap;
  position: relative;
  width: 100%;
  background: #fff;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
}
.ship_pic_wrap{
  position: relative;
  box-sizing: border-box;
  float: left;
  width: 33.3333%;
}
.ship_pic_wrap .tab_a{
  box-sizing: border-box;
  position: relative;
  display: block;
}
.ship_pic_wrap .tab_a .tab_img{
  position: relative;
  left: 50%;
  transform: translateX(-50%);
  width: 90%;
  min-height: 200rpx;
  max-height: 300rpx;
  overflow: hidden;
  border-radius: 10rpx;
}
.ship_pic_wrap .tab_a .tab_span{
  font-size: 24rpx;
  position: relative;
  display: block;
  margin-top: 10rpx;
  font-weight: bold;
  text-align: center;
  word-wrap: break-word;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
}
.ship_pic_wrap .tab_a .tab_p{
  font-size: 24rpx;
  text-align: center;
  word-wrap: break-word;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
}