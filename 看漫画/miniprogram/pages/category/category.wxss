/* pages/category/category.wxss */
page{
  background-color: rgba(238, 151, 204, .3);
}
.ContentBase {
  box-sizing: border-box;
  position: relative;
  width: 720rpx;    
  cursor: default;
  margin: 0 auto;
  margin-top: 10rpx;
  border-radius: 10rpx;
}
.category-init-ul{
	display: flex;
	display: -webkit-flex;
	flex-wrap: wrap;
	width: 720rpx;
	margin: 0 auto;
	background: #fff;
	border-radius: 10rpx;
}

.category-init-li{
	width: 320rpx;
	margin: 10rpx 20rpx;
	height: 180rpx;
	border-radius: 10rpx;
	background: rgba(238, 151, 204, .3);
}

.category-item-link{
	position: relative;
	display: block;
	width: 100%;
	height: 100%;
}

.item-name, .category-item-cover{
	position: absolute;
}

.item-name{
	top: 50%;
	left: 20rpx;
	font-size: 28rpx;
	font-weight: bold;
	transform: translateY(-50%);
}

.country-name{
  display: block;
  width: 100%;
  height: 100%;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
}

.category-item-cover{
	right: 0;
	width: 60%;
	height: 100%;
}

.country-init-li{
	width: 359rpx;
	height: 96rpx;
	line-height: 96rpx;	
}

.country-init-link{
	display: block;
	width: 100%;
	height: 100%;
	text-align: center;
	font-size: 32rpx;
	font-weight: bold;
}